<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/animation_layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <!--
         <include android:id="@+id/topLayout"
        layout="@layout/top1" />
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo"
        android:padding="12dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="任务系统"
                android:textColor="@color/lightgray"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnShare"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dip"
                android:padding="5dp"
                android:background="@drawable/expert_share_icon" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dip"
                android:background="@drawable/actionbar_add_icon" />

            <Button
                android:id="@+id/btnSet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/actionbar_more_icon" />
        </LinearLayout>
    </RelativeLayout>

    <com.wwj.popupwindow.CommonWidgetButton
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="@color/transparent"
        app:boarder_color="@color/green"
        app:fill_color="@color/gray_bg"
        app:boarder_size="3dp"
        android:layout_centerInParent="true"
        app:corner_radius="70"
        />

    <com.wwj.popupwindow.CommonWidgetButton
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        app:boarder_color="@color/green"
        app:boarder_size="3dp"
        android:layout_centerInParent="true"
        app:corner_radius="50"
        />

    <com.wwj.popupwindow.CommonWidgetButton
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        app:fill_color="@color/gray_bg"
        app:boarder_size="3dp"
        android:layout_centerInParent="true"
        app:corner_radius="50"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>